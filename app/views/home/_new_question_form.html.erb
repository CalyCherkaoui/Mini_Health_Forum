    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">

          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Ask a question</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

          <%= form_for :question, url: '/questions', html: { class: 'p-2' } do %>
            <div class="modal-body">
                <div class="form-group">
                  <label for="inputEmail" class="col-form-label">E-mail:</label>
                  <input type="email" name="question[email]" class="form-control" id="inputEmail" placeholder="@Email" required>
                </div>
                <div class="form-group">
                  <label for="InputQuestion" class="col-form-label">New Question:</label>
                  <textarea class="form-control" name="question[body]" id="InputQuestion" placeholder="Ask any question" required></textarea>
                </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-warning text-dark">Submit</button>
            </div>
          <% end %>

        </div>
      </div>
    </div>
